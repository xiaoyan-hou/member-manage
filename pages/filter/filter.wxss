/* pages/filter/filter.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 筛选区块 */
.filter-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 性别筛选 */
.gender-filter {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.filter-item {
  padding: 20rpx 40rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff;
  text-align: center;
  min-width: 120rpx;
}

.filter-item.active {
  border-color: #07c160;
  background-color: #e6f7ff;
  color: #07c160;
}

.filter-item text {
  font-size: 28rpx;
}

/* 筛选组 */
.filter-group {
  margin-bottom: 30rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

/* 范围输入 */
.range-inputs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.range-input {
  flex: 1;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
}

.range-separator {
  margin: 0 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 选择器显示 */
.picker-show {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.picker-show text:first-child {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 32rpx;
  color: #999;
}

/* 输入框 */
.filter-input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

/* 操作按钮 */
.filter-actions {
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.btn-reset, .btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin: 0 10rpx;
}

.btn-reset {
  background-color: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.btn-confirm {
  background-color: #07c160;
  color: #fff;
  border: none;
}

/* 筛选结果 */
.filter-results {
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
}

.results-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.results-header text:first-child {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.clear-results {
  font-size: 28rpx;
  color: #07c160;
}

.results-list {
  max-height: 600rpx;
  padding: 0 20rpx;
}

.member-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}

.member-gender {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.member-age {
  font-size: 28rpx;
  color: #666;
}

.member-details {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.member-occupation {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.member-height {
  font-size: 28rpx;
  color: #999;
}

.no-results {
  padding: 60rpx 0;
  text-align: center;
}

.no-results text {
  font-size: 28rpx;
  color: #999;
}