/* pages/member-detail/member-detail.wxss */

.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.member-detail-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.member-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.member-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.member-gender {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.member-gender.male {
  background: #e3f2fd;
  color: #1976d2;
}

.member-gender.female {
  background: #fce4ec;
  color: #c2185b;
}

.member-info-section {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.member-description {
  margin-bottom: 40rpx;
}

.description-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.description-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background: #fafafa;
  padding: 20rpx;
  border-radius: 8rpx;
  display: block;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}

.btn-secondary {
  background: #667eea;
  color: white;
}

.btn-danger {
  background: #e53e3e;
  color: white;
}

.btn:active {
  opacity: 0.8;
}