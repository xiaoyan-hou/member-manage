/**app.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #667eea;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  background: #fff;
}

.form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-height: 120rpx;
  background: #fff;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-danger {
  background: #dc3545;
  color: white;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 会员卡片样式 */
.member-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.member-card:active {
  transform: scale(0.98);
}

.member-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.member-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.member-gender {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.member-gender.male {
  background: #e3f2fd;
  color: #1976d2;
}

.member-gender.female {
  background: #fce4ec;
  color: #c2185b;
}

.member-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.member-info-item {
  display: flex;
  flex-direction: column;
}

.member-info-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 4rpx;
}

.member-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.member-requirements {
  background: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.member-requirements .label {
  color: #667eea;
  font-weight: 500;
}

/* 统计信息 */
.stats-container {
  display: flex;
  justify-content: space-around;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #888;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}

.empty-title {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: #666;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 筛选条件 */
.filter-conditions {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.filter-result {
  background: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #667eea;
}

.filter-result-text {
  font-size: 26rpx;
  color: #555;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-buttons .btn {
  flex: 1;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.form-actions .btn {
  flex: 1;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 文本样式 */
.text-primary {
  color: #667eea;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #dc3545;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

/* 间距样式 */
.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

/* 边框样式 */
.border-bottom {
  border-bottom: 1rpx solid #e1e5e9;
}

.border-top {
  border-top: 1rpx solid #e1e5e9;
}